<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field"
                   default-cascade="save-update">

    <class name="modelo.Pedido">
        <id name="id">
            <generator class="native"/>
        </id>

        <list name="productos" lazy="false">
            <key column="idProd"/>
            <list-index column="prod"/>
            <element type="modelo.Producto"/>
        </list>
        <many-to-one name="cliente" class="modelo.Cliente" lazy="false" cascade="all"/>
        <property name="estado"/>
        <!--<many-to-one name="usuario" class="modelo.Usuario" lazy="false" cascade="all"/>-->
    </class>

</hibernate-mapping>
